extends layout

block content
  .container
    .row
      .col-md-12
        .error-template
          h1 Oops!
          h2
            =message
          .error-details Sorry about that, but maybe it was your fault.
          .error-actions
            a.btn.btn-primary.btn-lg(href='./')
              span.glyphicon.glyphicon-home
              |                         Take Me Home
            a.btn.btn-default.btn-lg(href='mailto:andre@meneses.pt?subject=PodTubeCast Support Request')
              span.glyphicon.glyphicon-envelope
              |  Contact Support
        if error.stack
          pre #{error.stack}